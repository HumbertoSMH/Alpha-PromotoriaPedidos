<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="promotoria.grocus.mx.promotoriapedidos.controller.EncuestaListaActivity">

    <TextView
        android:id="@+id/sucursalTexView"
        android:text="Farmacia del Ahorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tituloCapturaEncuestaTextView"
        android:text="Captura de Encuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sucursalTexView"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/detallePedidoListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelarCapturaEncuestaButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/tituloCapturaEncuestaTextView"
        android:descendantFocusability="beforeDescendants"/>

    <Button
        android:id="@+id/cancelarCapturaEncuestaButton"
        android:text="Cancelar"
        android:layout_width="120dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/guardarEncuestaButton"
        android:text="Guardar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancelarCapturaEncuestaButton"
        android:layout_alignRight="@+id/detallePedidoListView"
        android:layout_alignEnd="@+id/detallePedidoListView" />

</RelativeLayout>
