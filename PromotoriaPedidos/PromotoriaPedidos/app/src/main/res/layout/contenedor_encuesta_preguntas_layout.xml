<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="promotoria.grocus.mx.promotoriapedidos.controller.ContenedorEncuestaPreguntasActivity">

    <LinearLayout
        android:id="@+id/celdaPreguntaEncuestaLinearLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/darker_gray"
        android:weightSum="1"
        android:clickable="false"
        android:visibility="visible">

        <TextView
            android:id="@+id/preguntaEncuestaTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="1.- ¿Qué le parece el Producto?"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Spinner
            android:id="@+id/respuestaEncuestaSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:ellipsize="end"
            android:spinnerMode="dialog"/>
    </LinearLayout>

</RelativeLayout>
