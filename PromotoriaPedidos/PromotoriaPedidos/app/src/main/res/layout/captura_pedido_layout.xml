<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="promotoria.grocus.mx.promotoriapedidos.controller.CapturaPedidoActivity">

    <TextView
        android:id="@+id/sucursalTexView"
        android:text="Farmacia del Ahorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tituloCapturaPedidoTextView"
        android:text="Captura de Pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sucursalTexView"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/productosListaCapturaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelarCapturaPedidoButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/tituloCapturaPedidoTextView"
        android:descendantFocusability="beforeDescendants"/>

    <Button
        android:id="@+id/cancelarCapturaPedidoButton"
        android:text="Cancelar"
        android:layout_width="120dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/continuarCapturaPedidoButton"
        android:text="Continuar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productosListaCapturaView"
        android:layout_alignRight="@+id/productosListaCapturaView"
        android:layout_alignEnd="@+id/productosListaCapturaView" />

</RelativeLayout>
