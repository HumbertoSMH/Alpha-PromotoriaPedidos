<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainLogin">

    <ImageView
        android:id="@+id/imagenLoginImageView"
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:background="@drawable/small_logo_300_px"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:baselineAlignBottom="true" />

    <TextView
        android:id="@+id/tituloLoginTextView"
        android:text="Promotoría y Pedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenLoginImageView"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/usuarioEditText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:hint="Usuario"
        android:ems="10"
        android:maxLength="25"
        android:layout_below="@+id/tituloLoginTextView"
        android:layout_alignLeft="@+id/contrasenaEditText"
        android:layout_alignStart="@+id/contrasenaEditText"
        android:layout_marginTop="40dp"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/contrasenaEditText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:ems="10"
        android:layout_below="@+id/usuarioEditText"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:maxLength="25"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/usuarioImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/contrasenaEditText"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/contrasenaImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/usuarioEditText"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/continuarLoginButton"
        android:text="Continuar"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/idVersionTextView"
        android:text="Ver: 1.0.0"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/continuarLoginButton" />

</RelativeLayout>
