<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="promotoria.grocus.mx.promotoriapedidos.controller.FirmaPedidoActivity">

    <TextView
        android:id="@+id/sucursalTexView"
        android:text="Farmacia del Ahorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/detallePedidoTextView"
        android:text="Firma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sucursalTexView"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nombreEditText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:hint="Nombre del encargado"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:maxLength="25"
        android:textSize="16dp"
        android:layout_below="@+id/detallePedidoTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/clearButton"
        android:layout_alignEnd="@+id/clearButton" />

    <EditText
        android:id="@+id/mailEditText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:hint="Email del encargado"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:maxLength="25"
        android:layout_below="@+id/nombreEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:layout_alignRight="@+id/nombreEditText"
        android:layout_alignEnd="@+id/nombreEditText"
        android:inputType="textWebEmailAddress" />

    <Button
        android:id="@+id/cancelarFirmaButton"
        android:text="Cancelar"
        android:layout_width="120dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cerrarPedidoButton"
        android:text="Guardar Pedido"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancelarFirmaButton"
        android:layout_alignRight="@+id/capturarFirmaLinearLayout"
        android:layout_alignEnd="@+id/capturarFirmaLinearLayout" />

    <TextView
        android:id="@+id/firmaTextView"
        android:text="Firma"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mailEditText"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/capturarFirmaLinearLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/cancelarFirmaButton"
        android:layout_below="@+id/clearButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </LinearLayout>

    <Button
        android:id="@+id/clearButton"
        android:text="Limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/firmaTextView"
        android:layout_alignRight="@+id/capturarFirmaLinearLayout"
        android:layout_alignEnd="@+id/capturarFirmaLinearLayout" />

</RelativeLayout>
